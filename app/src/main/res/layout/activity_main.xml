<?xml version="1.0" encoding="utf-8"?>

<!-- this layout tag indicates a binding class that's created for us
    the binding class will contain references to any views that have a resource ID -->

<layout>

    <data>
        <!-- instead of modifying the string value,
        we can create a reference variable to use in <TextView> of xml -->
        <variable name="name" type="String" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@{name.toUpperCase()}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/message_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_me"
        app:layout_constraintStart_toStartOf="@id/text_view_1"
        app:layout_constraintEnd_toEndOf="@id/text_view_1"
        app:layout_constraintTop_toBottomOf="@id/text_view_1"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>